# Docker Compose Environment Variables for Spheres of Influence

# Domain and SSL
DOMAIN=game-example.com
CERTBOT_EMAIL=admin@game-example.com
SSL_VERIFY=true

# Deployment mode (development | production)
DEPLOYMENT_MODE=development
TLS_ONLY=false

# Backend configuration
PORT=8080
GAME_WIDTH=64
GAME_HEIGHT=64
GAME_RESOURCE_TILES=220
GAME_TICK_MS=1000
ALLOW_INSECURE_AUTH=true
CORS_ALLOWED_ORIGIN=*
COGNITO_REGION=
COGNITO_USER_POOL_ID=
COGNITO_APP_CLIENT_ID=

# Frontend build configuration
VITE_BACKEND_URL=https://localhost
VITE_COGNITO_REGION=
VITE_COGNITO_USER_POOL_ID=
VITE_COGNITO_APP_CLIENT_ID=
VITE_DEBUG_PLAYER_ID=dev-player-1
