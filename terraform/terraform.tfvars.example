# Copy to terraform.tfvars and adjust values for your environment.

aws_region           = "us-east-1"
project_name         = "spheres-of-influence"
environment          = "production"

# Quick-deploy EC2 host (default path)
enable_ec2           = true
enable_ecs           = false
ssh_key_name         = "my-existing-keypair"
domain_name          = "sphereofinfluence.click"
admin_email          = "ops@sphereofinfluence.click"
deployment_mode      = "production"
cognito_domain_prefix = "soi-demo-001"
git_repo_url         = "https://github.com/johnlacomba/Game-SpheresOfInfluence.git"
git_branch           = "main"

oauth_callback_urls = [
  "https://sphereofinfluence.click",
  "https://sphereofinfluence.click/auth/callback"
]

oauth_logout_urls = [
  "https://sphereofinfluence.click"
]

# Uncomment to enable the original ECS/Fargate deployment instead of the EC2 host.
# enable_ec2      = false
# enable_ecs      = true
# backend_image   = "123456789012.dkr.ecr.us-east-1.amazonaws.com/spheres-backend:latest"
# frontend_image  = "123456789012.dkr.ecr.us-east-1.amazonaws.com/spheres-frontend:latest"
# desired_count   = 2
